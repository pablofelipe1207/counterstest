<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="IconButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:background">@drawable/circular_button_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/dimen8</item>
    </style>

    <style name="SquareButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/dimen120</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/dimen10</item>
        <item name="backgroundTint">@color/square_button_background_selector</item>
        <item name="android:textColor">@color/square_button_text_selector</item>
        <item name="android:translationZ">@dimen/dimen1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">@dimen/dimen10</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="expandedHintEnabled">false</item>
    </style>


</resources>